{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "YagoutPay SDK",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0A7A5F"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "API Reference",
            "openapi": "openapi.yaml",
            "pages": [
              "POST /api/send",
              "POST /links/dynamic",
              "POST /links/static"
            ]
          },
          {
            "group": "Get Started",
            "pages": [
              "docs/introduction",
              "docs/quickstart",
              "docs/authentication",
              "docs/environments"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "docs/sdk/dart",
              "docs/sdk/typescript",
              "docs/sdk/java"
            ]
          },
          {
            "group": "Integration",
            "pages": [
              "docs/integration/hosted-form",
              "docs/integration/direct-api",
              "docs/integration/payment-links"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "docs/examples/typescript-demo",
              "docs/examples/flutter-demo",
              "docs/examples/java-demo"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/knatnaela/yagoutpay-sdk",
          "icon": "github"
        },
        {
          "anchor": "Telegram",
          "href": "https://t.me/yagoutpaydev",
          "icon": "telegram"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "favicon": "/logo/favicon.png",
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": [
        "curl",
        "javascript"
      ],
      "defaults": "required",
      "prefill": true
    },
    "mdx": {
      "server": "https://checkout.yagoutpay.com",
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@yagoutpay.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://habesha.mintlify.app/docs/quickstart"
    }
  },
  "footer": {
    "socials": {
      "twitter": "https://twitter.com/yagoutpay",
      "github": "https://github.com/knatnaela/yagoutpay-sdk",
      "linkedin": "https://linkedin.com/company/yagoutpay"
    }
  }
}